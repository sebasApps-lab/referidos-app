{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "types": [
      "react",
      "react-native",
      "node"
    ],
    "paths": {
      "@app/*": [
        "app/*"
      ],
      "@navigation/*": [
        "navigation/*"
      ],
      "@features/*": [
        "features/*"
      ],
      "@shared/*": [
        "shared/*"
      ]
    }
  },
  "include": [
    "src",
    "index.js"
  ]
}
