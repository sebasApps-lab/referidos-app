{
  "name": "referidos-system",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:app": "npm run dev -w apps/referidos-app -- --host --mode remote",
    "dev:prelaunch": "npm run dev -w apps/prelaunch -- --host --mode remote",
    "android:guardrail": "node tooling/guardrails/verify-android-scope.mjs",
    "android:guardrail:print": "node tooling/guardrails/verify-android-scope.mjs --print",
    "android:phase1:health": "node tooling/android/phase1-runtime-health.mjs",
    "android:phase2:auth-check": "node tooling/android/phase2-auth-parity-check.mjs",
    "android:phase3:shell-check": "node tooling/android/phase3-shell-check.mjs",
    "android:metro": "node tooling/android/start-android-metro.mjs",
    "android:run": "npm run android -w @apps/referidos-android -- --port 8081 --no-packager",
    "android:gradle:tasks": "cmd.exe /c scripts\\run_android_gradle_tasks.cmd",
    "android:assemble:debug": "cmd.exe /c scripts\\run_android_assemble_debug.cmd 600",
    "versioning:detect": "node tooling/versioning/detect-changes.mjs",
    "versioning:apply": "node tooling/versioning/apply-changeset.mjs",
    "versioning:bootstrap": "node tooling/versioning/bootstrap-baseline.mjs",
    "versioning:promote": "node tooling/versioning/promote-release.mjs",
    "versioning:record-deploy": "node tooling/versioning/record-deployment.mjs",
    "build:app": "npm run build -w apps/referidos-app",
    "build:prelaunch": "npm run build -w apps/prelaunch",
    "build:app:release": "npm run build:app && node tooling/observability/upload-sourcemaps.mjs --app referidos-app",
    "build:prelaunch:release": "npm run build:prelaunch && node tooling/observability/upload-sourcemaps.mjs --app prelaunch",
    "preview:app": "npm run preview -w apps/referidos-app",
    "preview:prelaunch": "npm run preview -w apps/prelaunch",
    "lint": "npm run lint -ws --if-present",
    "test": "npm run test -ws --if-present"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.84.0",
    "dotenv": "^17.2.3",
    "framer-motion": "^12.23.24",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.553.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-qr-code": "^2.0.14",
    "react-router-dom": "^7.9.5",
    "uuid": "^13.0.0",
    "vite-plugin-pwa": "^1.2.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@tailwindcss/vite": "^4.1.17",
    "@types/react": "19.0.0",
    "@types/react-dom": "19.0.0",
    "@vitejs/plugin-react": "^5.0.4",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "supabase": "^2.58.5",
    "tailwindcss": "^4.1.17",
    "vite": "^7.1.7",
    "vite-plugin-pwa": "^1.2.0"
  }
}
